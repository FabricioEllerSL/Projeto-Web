<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pacientes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1 class="titulo-principal">Pacientes</h1>
  <a href="/" class="novo-paciente"><</a>
  <a href="/pacientes/new" class="novo-paciente">Novo Paciente</a>
  <div class="container-pacientes">
    <% pacientes.forEach(paciente => { %>
      <div class="paciente">
        <a class="paciente-nome" href="/pacientes/<%= paciente.id %>"><%= paciente.nome %></a>
        <a class="botao-acao" href="/pacientes/<%= paciente.id %>/edit">Editar</a>
        <a class="botao-acao" href="/pacientes/<%= paciente.id %>/">Visualizar</a>
        <form action="/pacientes/<%= paciente.id %>/delete" method="post" style="display:indivne;">
          <button class="botao-deletar" type="submit">Deletar</button>
        </form>
      </div>
    <% }); %>
  </div>
</body>
</html>
