<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Novo Agendamento</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Novo Agendamento</h1>
  <form action="/agendamentos" method="post">
    <label for="data">Data:</label>
    <input type="date" id="data" name="data" required><br>
    <label for="horario">Horário:</label>
    <input type="time" id="horario" name="horario" required><br>
    <label for="nome_paciente">Paciente:</label>
    <select id="nome_paciente" name="nome_paciente" required>
      <% pacientes.forEach(paciente => { %>
        <option value="<%= paciente.id %>"><%= paciente.nome %></option>
      <% }); %>
    </select><br>
    <label for="nome_medico">Médico:</label>
    <select id="nome_medico" name="nome_medico" required>
      <% medicos.forEach(medico => { %>
        <option value="<%= medico.id %>"><%= medico.nome %></option>
      <% }); %>
    </select><br>
    <button type="submit">Salvar</button>
  </form>
  <a href="/agendamentos">Voltar</a>
</body>
</html>
